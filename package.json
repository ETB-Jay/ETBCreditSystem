{
  "name": "etbcredit",
  "description": "ETB Credit System - A desktop application for managing customer credit transactions",
  "author": "Michael Zhang (ETB)",
  "repository": {
    "type": "git",
    "url": "https://github.com/ETB-Jay/ETBCreditSystem"
  },
  "version": "1.1.3",
  "type": "module",
  "main": "./electron/main.js",
  "license": "UNLICENSED",
  "publisher": "Michael Zhang (ETB)",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "start": "electron .",
    "publish": "cross-env electron-builder build --win --publish always"
  },
  "dependencies": {
    "@emotion/styled": "^11.14.0",
    "@firebasegen/default-connector": "file:dataconnect-generated/js/default-connector",
    "@mui/icons-material": "^7.1.0",
    "electron-log": "^5.4.0",
    "electron-updater": "^6.6.2",
    "firebase": "^11.8.1",
    "jszip": "^3.10.1",
    "prop-types": "^15.8.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@tailwindcss/vite": "^4.1.8",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.3.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "vite": "^6.3.5"
  },
  "build": {
    "appId": "com.etb.creditsystem",
    "productName": "ETBCredit",
    "directories": {
      "output": "release-builds"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "public/**/*",
      "!node_modules/@tailwindcss/oxide-*"
    ],
    "extraResources": [
      {
        "from": "public/ETBFavicon.ico",
        "to": "ETBFavicon.ico"
      }
    ],
    "mac": {
      "target": "dmg",
      "icon": "public/ETBFavicon.ico"
    },
    "win": {
      "target": "nsis",
      "signAndEditExecutable": false,
      "icon": "public/ETBFavicon.ico"
    },
    "publish": {
      "provider": "github",
      "owner": "ETB-Jay",
      "repo": "ETBCreditSystem",
      "releaseType": "release",
      "private": false
    }
  }
}
